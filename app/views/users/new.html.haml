%h1 User Sign up

= form_tag users_path do

  = label :user, :user_name, 'User-ID'
  = text_field :user, 'user_name'

  = label :user, :email, 'E-mail'
  = text_field :user, 'email'

  = label :password, 'pass'
  = text_field :user, 'password'

  = label :verify_password, 'Verify Password'
  = text_field :verify_password, params[:verify_password]

  = submit_tag 'Create my account'
