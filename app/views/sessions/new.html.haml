- if flash[:notice]
  #notice.flashMessage= flash[:notice]
- elsif flash[:warning]
  #warning.message= flash[:warning]

%h1 User Login

= form_tag login_create_path do

  = label :user, :user_name, 'User-ID'
  = text_field :user, 'user_name'

  = label :user, :password, 'Password'
  = password_field :user, 'password'

  = submit_tag 'Login to my account'

= link_to 'Sign up for an account', new_user_path, :method => :get, :id => 'sign up'
